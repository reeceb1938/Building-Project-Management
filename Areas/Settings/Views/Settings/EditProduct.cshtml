@model NestLinkV2.Areas.Settings.ViewModels.EditProductViewModel

@section Toolbar {
    <li class="nav-item toolbar-item">
        <a href="javascript:submitForm()">
            <i class="fa fa-check"></i>
            <p class="">Update Product</p>
        </a>
    </li>
    <li class="nav-item toolbar-item">
        <a asp-area="Settings" asp-controller="Settings" asp-action="ManageProducts">
            <i class="fa fa-times"></i>
            <p class="">Cancel</p>
        </a>
    </li>
}

@section Scripts {
    <script type="text/javascript">
        function submitForm() {
            $('#create-product-form').submit();
        }
    </script>
}

<h1>Create Product</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post" id="create-product-form">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedProductTypeID"></label>
                <select asp-for="SelectedProductTypeID" asp-items="@Model.ProductTypes" class="form-select">
                    <option>Please Select a Product Type</option>
                </select>
                <span asp-validation-for="SelectedProductTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NetPrice"></label>
                <input asp-for="NetPrice" type="number" class="form-control" />
                <span asp-validation-for="NetPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VAT"></label>
                <input asp-for="VAT" type="number" class="form-control" />
                <span asp-validation-for="VAT" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>
