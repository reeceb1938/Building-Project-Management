@model NestLinkV2.Areas.Settings.ViewModels.CreateUserRoleViewModel
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Settings - User Accounts";
}

@section Toolbar {
    <li class="nav-item toolbar-item">
        <a href="javascript:submitForm()">
            <i class="fa fa-check"></i>
            <p class="">Create Role</p>
        </a>
    </li>
    <li class="nav-item toolbar-item">
        <a asp-area="Settings" asp-controller="Settings" asp-action="UserAccounts">
            <i class="fa fa-times"></i>
            <p class="">Cancel</p>
        </a>
    </li>
}

@section Scripts {
    <script type="text/javascript">
        function submitForm() {
            $('#create-user-role-form').submit();
        }
    </script>
}

<h1>Create User Role</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post" id="create-user-role-form">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>