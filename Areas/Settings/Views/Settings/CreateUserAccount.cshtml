@model NestLinkV2.Areas.Settings.ViewModels.CreateUserAccountViewModel
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Settings - User Accounts";
}

@section Toolbar {
    <li class="nav-item toolbar-item">
        <a href="javascript:submitForm()">
            <i class="fa fa-check"></i>
            <p class="">Create User</p>
        </a>
    </li>
    <li class="nav-item toolbar-item">
        <a asp-area="Settings" asp-controller="Settings" asp-action="UserAccounts">
            <i class="fa fa-times"></i>
            <p class="">Cancel</p>
        </a>
    </li>
}

@section Scripts {
    <script type="text/javascript">
        function submitForm() {
            $('#create-user-account-form').submit();
        }
    </script>
}

<h1>Create User Account</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post" id="create-user-account-form">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserRoles"></label>
                @foreach (SelectListItem role in ViewBag.AvailableUserRoles)
                {
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="UserRoles" id="UserRoles" value="@role.Value"/> @role.Text
                        </label>
                    </div>
                }
            </div>
        </form>
    </div>
</div>