@model IEnumerable<Quote>

@using NestLinkV2.Models

@if (Model.Count() == 0)
{
    <p class="text-center">No Quotes</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Product</th>
                <th>Status</th>
                <th>Deadline</th>
                <th>Price</th>
                <th>Technician</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Quote quote in Model)
            {
                <tr class="clickable-row" onclick="window.location = '/AdminStaffPortal/ViewQuote/@quote.ID'">
                    <th>@quote.ID</th>
                    <th>@quote.PrimaryProduct.Name</th>
                    <th>@quote.QuoteStatus.Name</th>
                    <th>@quote.DueWhen.ToString("g")</th>
                    <th>£@quote.GrossCost.ToString("g")</th>
                    <th>@(quote.QuoteAppointment == null ? "" : quote.QuoteAppointment.Technician.User.UserName)</th>
                </tr>
            }
        </tbody>
    </table>
}