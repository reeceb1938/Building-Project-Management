@model IEnumerable<Job>

@using NestLinkV2.Models

@if (Model.Count() == 0)
{
    <p class="text-center">No Jobs</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Product</th>
                <th>Status</th>
                <th>Deadline</th>
                <th>ETA</th>
                <th>Cost</th>
                <th>Technician</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Job job in Model)
            {
                <tr class="clickable-row" onclick="window.location = '/AdminStaffPortal/ViewJob/@job.ID'">
                    <th>@job.ID</th>
                    <th>@job.PrimaryProduct.Name</th>
                    <th>@job.JobStatus.Name</th>
                    <th>@job.DueWhen.ToString("g")</th>
                    <th>@job.ETA.ToString("g")</th>
                    <th>£@job.GrossCost.ToString("g")</th>
                    <th>@(job.CurrentTechnician == null ? "" : job.CurrentTechnician.User.UserName)</th>
                </tr>
            }
        </tbody>
    </table>
}