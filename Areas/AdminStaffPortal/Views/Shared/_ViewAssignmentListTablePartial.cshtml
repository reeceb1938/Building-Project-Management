@model IEnumerable<Assignment>

@using NestLinkV2.Models

@if (Model.Count() == 0)
{
    <p class="text-center">No Assignments</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Client</th>
                <th>Site</th>
                <th>Name</th>
                <th>Deadline</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Assignment assignment in Model)
            {
                <tr class="clickable-row" onclick="window.location = '/AdminStaffPortal/ViewAssignment/@assignment.ID'">
                    <th>@assignment.ID</th>
                    <th>@(assignment.Site.Client == null ? "Independent Site" : assignment.Site.Client.Name)</th>
                    <th>@assignment.Site.AddressLine1, @assignment.Site.Postcode</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            }
        </tbody>
    </table>
}